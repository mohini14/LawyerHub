<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/backgroundGradientStartColor"
        android:minHeight="160dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/displayoption_imageview"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/displayoption_title_textView"
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center|start"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorPureWhite"
            android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/displayoption_specialisation_textView"
                android:layout_marginStart="20dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="bottom|start"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/colorPureWhite"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/displayoption_consultation_fee_textView"
                android:layout_marginStart="20dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="bottom|end"
                android:padding="10dp"
                android:maxLines="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/displayoption_list_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorLightGray" />
</LinearLayout>